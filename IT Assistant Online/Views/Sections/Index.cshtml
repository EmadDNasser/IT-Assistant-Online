@model IEnumerable<IT_Assistant_Online.Models.Section>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container" style="padding-top:75px;">

    <h2> أقسام الصيانة</h2>
    <hr />

    <div class="well" style="font-size:medium;">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>

                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("تعديل", "Edit", new { id = item.id }) |
                        @Html.ActionLink("تفاصيل القسم", "Details", new { id = item.id }) |
                        @Html.ActionLink("حذف القسم", "Delete", new { id = item.id })
                    </td>
                </tr>
            }

        </table>

        <p>
            @Html.ActionLink("إنشاء قسم جديد", "Create")
        </p>

    </div>
 
</div>
