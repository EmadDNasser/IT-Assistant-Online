
@{
    ViewBag.Title = "Upgrade";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="padding-top:75px;">
    <div class="panel panel-default">
        <div class="panel-heading"><h2>ترقية</h2></div>
        <div class="panel-body">
            @using (Html.BeginForm("Upgrade", "Manage", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.Label(" يرجى ترقيةالعضو :", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("Role", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="حفظ" class="btn btn-default" />
                        </div>
                    </div>

                </div>
            }

        </div>
    </div>
</div>